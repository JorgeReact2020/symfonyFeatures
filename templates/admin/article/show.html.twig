{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto my-8 px-5">
    <header class="mb-8">
        <a href="{{ path('admin_article_index') }}" class="inline-block mb-4 text-blue-600 hover:text-blue-800 hover:underline">
            ‚Üê Back to Articles List
        </a>
        <h1 class="text-4xl font-bold text-gray-900">{{ article.title }}</h1>
        <div class="text-gray-600 mt-3">
            <small>
                Created: {{ article.createdAt|date('F j, Y \\a\\t H:i') }} |
                Last Updated: {{ article.updatedAt|date('F j, Y \\a\\t H:i') }}
            </small>
        </div>
    </header>

    {% for message in app.flashes('error') %}
        <div class="p-4 mb-5 bg-red-100 border border-red-300 text-red-800 rounded-lg">
            {{ message }}
        </div>
    {% endfor %}

    <div class="bg-white p-8 rounded-lg shadow-md mb-6">
        <h3 class="mt-0 text-xl font-semibold text-gray-700 mb-4">Description</h3>
        <div class="leading-relaxed text-gray-900 whitespace-pre-wrap">
            {{ article.description }}
        </div>
    </div>

    <div class="flex gap-3 mt-8">
        <a href="{{ path('admin_article_edit', {id: article.id}) }}" class="px-6 py-3 bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-semibold rounded-lg transition-colors">
            Edit Article
        </a>
        {% if is_granted('ARTICLE_DELETE', article) %}
            <form method="post" action="{{ path('admin_article_delete', {id: article.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this article?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                <button type="submit" class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg transition-colors">
                    Delete Article
                </button>
            </form>
        {% endif %}
    </div>
</div>
{% endblock %}
