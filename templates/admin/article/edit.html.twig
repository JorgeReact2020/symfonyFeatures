{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto my-8 px-5">
    <header class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Edit Article</h1>
        <a href="{{ path('admin_article_index') }}" class="inline-block mt-3 text-blue-600 hover:text-blue-800 hover:underline">
            ‚Üê Back to Articles List
        </a>
    </header>

    {% for message in app.flashes('error') %}
        <div class="p-4 mb-5 bg-red-100 border border-red-300 text-red-800 rounded-lg">
            {{ message }}
        </div>
    {% endfor %}

    <div class="bg-white p-8 rounded-lg shadow-md">
        {{ form_start(form) }}
            <div class="mb-6">
                {{ form_label(form.title, null, {'label_attr': {'class': 'block mb-2 font-semibold text-gray-700'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent'}}) }}
                {{ form_errors(form.title) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.description, null, {'label_attr': {'class': 'block mb-2 font-semibold text-gray-700'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent', 'rows': 6}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="mt-8 flex gap-3">
                <button type="submit" class="px-6 py-3 bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-semibold rounded-lg transition-colors">
                    Update Article
                </button>
                <a href="{{ path('admin_article_index') }}" class="inline-block px-6 py-3 bg-gray-600 hover:bg-gray-700 text-white font-semibold rounded-lg transition-colors">
                    Cancel
                </a>
            </div>
        {{ form_end(form) }}
    </div>

    <div class="mt-5 p-4 bg-yellow-50 border border-yellow-200 text-yellow-900 rounded-lg">
        <strong>Info:</strong>
        <ul class="mt-2 ml-5 space-y-1">
            <li>Created: {{ article.createdAt|date('Y-m-d H:i:s') }}</li>
            <li>Last Updated: {{ article.updatedAt|date('Y-m-d H:i:s') }}</li>
        </ul>
    </div>
</div>
{% endblock %}
